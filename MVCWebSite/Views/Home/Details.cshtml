@model MVCWebSite.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h4>Employee</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Emp Id
            </dt>
    
            <dd>
                @Model.EmpId
            </dd>
    
            <dt>
                Employee Name
            </dt>
    
            <dd>
                @Model.EmployeeName
            </dd>
    
            <dt>
                Age Of Employee)
